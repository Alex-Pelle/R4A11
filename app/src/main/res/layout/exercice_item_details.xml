<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView

        android:id="@+id/nomExo"
        android:layout_width="300dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/muscle"
        android:layout_width="300dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/border_bottom"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomExo" />

    <Button
        android:id="@+id/getDetails"
        android:layout_width="47dp"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:drawableStart="@android:drawable/ic_menu_help"
        app:layout_constraintStart_toEndOf="@+id/nomExo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>