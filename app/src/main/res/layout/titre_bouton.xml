<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textPageName"
        android:layout_width="170dp"
        android:layout_height="19dp"
        android:layout_marginEnd="60dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCreation"
        app:layout_constraintEnd_toStartOf="@+id/buttonCreation"
        app:layout_constraintTop_toTopOf="@+id/buttonCreation" />

    <Button
        android:id="@+id/buttonCreation"
        android:layout_width="117dp"
        android:layout_height="53dp"
        android:layout_marginEnd="28dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>